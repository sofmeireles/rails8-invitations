<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<h2>Invite someone</h2>

<% if Current.user %>
  <hr>
  <%= form_with url: "/invite", method: :post do |form| %>
    <%= form.email_field :email, placeholder: "friend@example.com", required: true %>
    <%= form.submit "Send Invitation" %>
  <% end %>

<p><%= link_to "Logout", session_path, method: :delete, data: { turbo_method: :delete } %></p>

<% end %>

