<div class="auth-container">
  <% if flash[:alert] %>
    <div class="flash-message flash-alert" id="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="flash-message flash-notice" id="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>


  <% if Current.user %>
    <div class="user-section">
      <h2 class="auth-section-title">Invite someone</h2>
      <hr class="section-divider">

      <%= form_with url: "/invite", method: :post, class: "form-inline" do |form| %>
        <%= form.email_field :email, 
              placeholder: "friend@example.com", 
              required: true, 
              class: "form-input" %>
        <%= form.submit "Send Invitation", class: "btn-primary" %>
      <% end %>

      <div class="auth-footer">
        <%= link_to "Logout", session_path, 
              method: :delete, 
              data: { turbo_method: :delete }, 
              class: "btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
